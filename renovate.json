{
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    "schedule:weekends",
    ":label(dependencies)",
    ":separatePatchReleases"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "minor dependencies"
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "patch dependencies"
    }
  ]
}
